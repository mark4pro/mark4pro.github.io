@!pengoTemplate=module!@
    <div id='ModalView' class='ModalView'>
        <div id='ModalViewFrame' class='ModalViewFrame'/>
        <div id='ModalViewContent' class='ModalViewContent'/>
    </div>
    <div id='RootWaitView' class='WaitView'>
        <div class='wait-background'/>
        <div class='wait-image-big RotateDiv'/>
        <div class='spinner spinner-big'>
            <div class='spinner-out spinner-border-big'/>
            <div class='spinner-in spinner-border-big'/>
        </div>
    </div>
